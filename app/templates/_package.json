{
  "name": "<%= slugname %>",
  "version": "0.0.0",
  "description": "<%= props.description %>",<% if (props.homepage) { %>
  "homepage": "<%= props.homepage %>",<%}%>
  "bugs": "<%= repoUrl %>/issues",
  "license": "<%= props.license %>",
  "main": "index.js",
  "author": "<%= props.authorName %> <<%= props.authorEmail %>>",
  "files": [
    "index.js",
    "lib",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "<%= repoUrl %>"
  },<% if (config.cli) { %>
  "bin": "./cli.js",<% } %>
  "keywords": [
    "<%= slugname %>"<% for (var i = 0; i < keywords.length; i += 1) { %>,
    "<%= keywords[i] %>"<% } %>
  ],
  "dependencies": {<% if (config.cli) { %>
    "meow": "^3.1.0"<% } %>
  },
  "devDependencies": {<% if (config.coveralls) { %>
    "mocha-lcov-reporter": "^0.0.2",
    "istanbul": "^0.3.8",
    "coveralls": "^2.11.2",<% } %>
    "nodemon": "^1.3.7",
    "eslint": "^0.17.1",
    "mocha": "^2.2.1"
  },
  "scripts": {<% if (config.coveralls) { %>
    "istanbul": "istanbul cover _mocha --report lcovonly -- -R spec test/",
    "coveralls:report": "cat ./coverage/lcov.info | coveralls",
    "coveralls": "npm run istanbul && npm run coveralls-report",<% } %>
    "lint": "eslint index.js lib test",
    "test": "mocha -R spec test/",
    "test:watch": "nodemon --watch lib --watch test --watch index.js --exec 'npm test'",
    "start": "npm run test:watch"
  }
}
